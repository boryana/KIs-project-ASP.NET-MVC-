<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <style>
   /*.container{
       background-color:lavender;
   }*/

     .navbar-collapse {
        background-color: skyblue  ;
       
    }
   
     /*li a {
         color:white;
         font-size:16px;
     }*/  
     div.container.navbar.navbar-inverse.navbar-fixed-top{
         padding-left:0;
         padding-right:0;
        
     }
     ul.nav.navbar-nav li a{
         color:#2a39b4  ;
         font-size: 16px;
     }
     a.navbar-brand {
         color:#428bca !important;
     }

   </style>
</head>
<body>
    
        <div class="container navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("БББ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand " })
            </div>
            
            <div class="navbar-collapse collapse  ">
                <ul class="nav navbar-nav ">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Списък документи", "Index", "KIs")</li>
                    @*<li>@Html.ActionLink("Grifs", "Index", "Grifs")</li>*@
                    <li>@Html.ActionLink("Правно основание", "Index", "Laws")</li>
                    <li>@Html.ActionLink("Ниво на класификация", "Index", "GrifNames")</li>
                    <li>@Html.ActionLink("Справка", "Count", "KIs") </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    
    <div class="container body-content" >

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
